@model IEnumerable<Shared.PlaylistDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Playlists</h2>

@if (Model == null)
{
    <p>We don't have any playlists yet.</p>
}

else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var playlistDto in Model)
            {
                <tr>
                    <td>@playlistDto.Title</td>
                </tr>
            }
        </tbody>
    </table>
}

